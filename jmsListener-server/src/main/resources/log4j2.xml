<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] - %m%n"/>
    </Console>
    <File name="InfoLogger" fileName="slsInfo.log">
      <PatternLayout pattern="%d %-5p [%t] - %m%n"/>
    </File>
	<File name="ErrorLogger" fileName="slsErrors.log">
      <PatternLayout pattern="%d %-5p [%t] (%F:%L) - %m%n"/>
    </File>
  </Appenders>
  
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="CONSOLE" level="all"/>
	  <AppenderRef ref="InfoLogger" level="info"/>
	  <AppenderRef ref="ErrorLogger" level="error"/>
    </Root>
  </Loggers>
  
</Configuration>
